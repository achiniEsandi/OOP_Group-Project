<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" version="5.0">
  <servlet>
    <description>Servlet for handling user insertion</description>
    <display-name>userInsertServlet</display-name>
    <servlet-name>userInsertServlet</servlet-name>
    <servlet-class>com.videoLane.userInsertServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userInsertServlet</servlet-name>
    <url-pattern>/userInsert</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet for displaying user profile</description>
    <display-name>UserProfileServlet</display-name>
    <servlet-name>UserProfileServlet</servlet-name>
    <servlet-class>com.videoLane.UserProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserProfileServlet</servlet-name>
    <url-pattern>/UserProfileServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet for handling user login</description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.videoLane.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Servlet for updating user profile</description>
    <display-name>UpdateUserProfileServlet</display-name>
    <servlet-name>UpdateUserProfileServlet</servlet-name>
    <servlet-class>com.videoLane.UpdateUserProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateUserProfileServlet</servlet-name>
    <url-pattern>/UpdateUserProfileServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AccountActionServlet</display-name>
    <servlet-name>AccountActionServlet</servlet-name>
    <servlet-class>com.videoLane.AccountActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AccountActionServlet</servlet-name>
    <url-pattern>/AccountActionServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeleteAccountServlet</display-name>
    <servlet-name>DeleteAccountServlet</servlet-name>
    <servlet-class>com.videoLane.DeleteAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteAccountServlet</servlet-name>
    <url-pattern>/DeleteAccountServlet</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout> <!-- Timeout in minutes -->
</session-config>
  
  
</web-app>