<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
	

	
	<servlet>
        <servlet-name>RetrieveVideoServlet</servlet-name>
        <servlet-class>control.RetrieveVideoServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RetrieveVideoServlet</servlet-name>
        <url-pattern>/retrieveVideoServlet/*</url-pattern>
    </servlet-mapping>
	
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>control.loginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>

	
	
	<mime-mapping>
    <extension>mp4</extension>
    <mime-type>video/mp4</mime-type>
	</mime-mapping> 
	
	<servlet>
        <servlet-name>videoUpload</servlet-name>
        <servlet-class>control.VideoAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>videoUpload</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping> 
 
         
         <session-config>
    <session-timeout>30</session-timeout>
</session-config>
 
 

</web-app>
